<!DOCTYPE html>
<html>
  <head>
    <title>Astra</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <link rel="stylesheet" href="/assets/main.css"/>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
      window.runner = "<%= [image_url("running-alone-front.jpg"), image_url("cyclist.jpg"), image_url("hiking.jpg")].sample %>"
      window.splash = "<%= image_url("splash_page.jpg") %>"
      window.astra = "<%= image_url("astra.jpg") %>"
      window.astra_gray = "<%= image_url("astra_gray.jpg") %>"
      window.desktop = "<%= image_url("desktop.JPG") %>"
      window.ava = "<%= image_url("ava.jpg") %>"

    </script>
    <script type="text/javascript">
      window.googleAPIKey = "<%= Rails.application.credentials.google[:api_key] %>"
    </script>
    <script src="https://kit.fontawesome.com/080cd15705.js" crossorigin="anonymous"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=<%= Rails.application.credentials.google[:api_key] %>"></script>
    <%= favicon_link_tag asset_path('apple-touch-icon.png') %>
    <meta property="og:title" content="Astra" />
    <meta property="og:description" content="Astra is a Strava clone that allows user to create routes and workouts" />
    <meta property="og:url" content="https://astrava.herokuapp.com/#/" />
    <meta property="og:image" content="<%= image_url('astra.JPG') %>" />
    <meta property="og:image:width" content="300" />
    <meta property="og:image:height" content="300" />
  </head>

  <body>
    <%= yield %>
  </body>
</html>
